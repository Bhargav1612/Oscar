import React from "react";
import styled from "styled-components";
import { Carousel } from "@vds/carousels";

// Wrapper for the entire section
const TemplateWrapper = styled.div`
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  background: ${(props) => (props.$surface === "dark" ? "#131313" : "#f6f6f6")};
`;

// Title Section
const TitleSection = styled.div`
  text-align: center;
  margin-bottom: 20px;
`;

// Tile Wrapper
const TileWrapper = styled.div`
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 16px;
  border-radius: 8px;
  background: white;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
`;

// Image & Button Section
const ImageButtonSection = styled.div`
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 10px;
`;

// Button
const BuyButton = styled.button`
  background-color: #007bff;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;

  &:hover {
    background-color: #0056b3;
  }
`;

// Image Styling
const ProductImage = styled.img`
  width: 80px;
  height: auto;
  margin-left: 10px;
`;

const MyClickTemplate = ({ reccomendDevices }) => {
  return (
    <TemplateWrapper>
      {/* Title Section */}
      <TitleSection>
        <h1>Recommended Devices</h1>
      </TitleSection>

      {/* Carousel Section */}
      <Carousel
        layout="3UP"
        gutter="24px"
        peek="standard"
        surface="light"
        paginationInset="12px"
        aspectRatio="2:3"
        viewportOverride={{
          mobile: { layout: "1UP" },
          mobileLarge: { layout: "2UP" },
          tablet: { layout: "3UP" },
          tabletLarge: { layout: "3UP" },
          desktop: { layout: "3UP" },
        }}
        pagination={{ kind: "lowContrast", hideBorder: true }}
        floating
        paginationDisplay="onHover"
        data={reccomendDevices.map((device, index) => ({
          id: `tile-${index}`,
          title: device.productname,
          subtitle1: `Brand: ${device.currentbrand}`,
          subtitle2: `Price: ${device.amount}`,
          subtitle3: "Limited Offer!",
          img: device.imageurl,
        }))}
        renderItem={(item) => (
          <TileWrapper key={item.id}>
            <h2>{item.title}</h2>
            <h3>{item.subtitle1}</h3>
            <h3>{item.subtitle2}</h3>
            <h3>{item.subtitle3}</h3>

            {/* Image & Button Section */}
            <ImageButtonSection>
              <BuyButton onClick={() => alert(`Buying ${item.title}`)}>Buy Now</BuyButton>
              <ProductImage src={item.img} alt={item.title} />
            </ImageButtonSection>
          </TileWrapper>
        )}
      />
    </TemplateWrapper>
  );
};

export default MyClickTemplate;
