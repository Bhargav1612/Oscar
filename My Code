- (void)setupOverlay {
    UIWindow *keyWindow = [UIApplication sharedApplication].keyWindow;
    self.overlayView = [[UIView alloc] initWithFrame:keyWindow.bounds];
    self.overlayView.backgroundColor = [[UIColor blackColor] colorWithAlphaComponent:0.5];
    self.overlayView.hidden = YES;

    [keyWindow addSubview:self.overlayView];
    NSLog(@"Overlay added to keyWindow");
}
